extends layout

block body
    a(href="/") Go Back

    h2= item.title
    p= item.description
    h3 User Reviews
        if (reviews && reviews.length)
            each review in reviews
                .review
                    b #{review.stars} stars
                    p= review.text
                hr
        else
            p No review to show. Write one!

    form(action="/item/#{item.id}/review", method="POST")
        fieldset
            legend Create Review
            p
                label Stars
                select(name="stars")
                    option 1
                    option 2
                    option 3
                    option 4
                    option 5
            p
                label Review
                textarea(name="text")
            p
                button(type="submit") Send